---
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Toolbox24 bietet Werkzeugvermietung und Teppichreinigung in Wien. Verfügbar in allen Bezirken von 1010 bis 1190."
		/>
		<meta
			name="keywords"
			content="Werkzeugvermietung Wien, Teppichreinigung Wien, Polsterreinigung Wien, Sofa Reinigung Wien, Auto Reinigung Wien, Reinigungsservice Wien, Toolbox24"
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "LocalBusiness",
				"name": "Toolbox24 Reinigung",
				"description": "Professionelle Werkzeugvermietung, Teppichreinigung, Polsterreinigung, Sofa Reinigung und Auto Reinigung in Wien",
				"url": "https://toolbox24.wien",
				"areaServed": {
					"@type": "City",
					"name": "Wien",
					"postalCodePrefix": ["1010", "1020", "1030", "1040", "1050", "1060", "1070", "1080", "1090", "1110", "1120", "1130", "1140", "1150", "1160", "1170", "1180", "1190"]
				},
				"address": [
					{
						"@type": "PostalAddress",
						"streetAddress": "Sturzgasse 11",
						"postalCode": "1150",
						"addressLocality": "Wien",
						"addressCountry": "AT",
						"addressRegion": "Wien"
					},
					{
						"@type": "PostalAddress",
						"streetAddress": "Hannovergasse 8",
						"postalCode": "1220",
						"addressLocality": "Wien",
						"addressCountry": "AT",
						"addressRegion": "Wien"
					}
				],
				"priceRange": "€€",
				"serviceType": ["Werkzeugvermietung", "Teppichreinigung", "Polsterreinigung", "Sofa Reinigung", "Auto Reinigung"]
			}
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,600;0,700;0,900;1,400;1,700;1,900&display=swap");
	:root {
		--primary-color: #fffa02;
		--secondary-color: #fdd500;
		--secondary-bg-color: #00c2fd16;
		--cta-color: #9fd4db;
		/* --cta-color: #00ffcd; */
	}
	html {
		background: white;
		padding: 0;
	}
	body {
		margin: 0;
		padding: 0;
		font-family: "Poppins", sans-serif;
	}
</style>
